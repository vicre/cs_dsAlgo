
      function Hash( Key : StringType; KeySize : integer ) : Index;
        var
          HashVal, j : integer;
      begin
{1}       HashVal := ord( Key[ 1 ] );
{2}       for j := 2 to KeySize do
{3}           HashVal := ( HashVal * 32 + ord( Key[ j ] ) )
                                  mod TableSize;
{4}       Hash := HashVal;
      end;



